{
  "name": "metalk",
  "version": "1.0.0",
  "description": "Message web application",
  "main": "index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=prod node dist/app",
    "dev": "concurrently --kill-others \"cross-env NODE_ENV=devel nodemon src/app/index.ts\" \"sass --no-source-map --watch src/sass:public/css\"",
    "build": "npm run build:sass && npm run build:ts",
    "build:ts": "tsc",
    "build:sass": "sass --no-source-map src/sass:public/css"
  },
  "author": "Nasadmi",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "5.1.1",
    "cookie-parser": "1.4.6",
    "cors": "^2.8.5",
    "dotenv": "16.4.5",
    "ejs": "3.1.9",
    "express": "4.18.3",
    "express-session": "1.18.0",
    "morgan": "1.10.0",
    "mysql2": "3.9.2",
    "passport": "0.7.0",
    "passport-local": "1.0.0",
    "sass": "1.71.1",
    "socket.io": "4.7.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.0",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.25",
    "@types/passport": "^1.0.16",
    "@types/passport-local": "^1.0.38",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.1.1",
    "nodemon": "^3.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
